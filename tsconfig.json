{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es2015",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "outDir": "./build",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
